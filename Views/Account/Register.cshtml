@{
    ViewData["Title"] = "Registration";
}
@model kopilka.ViewModels.RegisterModel
<div class="style">
   <div class="div_welcome"><h2>Регистрация</h2></div>
   <div class="register_container">
     <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
       <div class="validation" asp-validation-summary="All"></div>
           <div class="form">
             <label asp-for="Login" class="label_login">Введите Email</label><br />
             <input type="text" asp-for="Login" />
             <span asp-validation-for="Login" />
           </div>
           <div class="form">
             <label asp-for="Password" class="label_password">Введите пароль</label><br />
             <input asp-for="Password" />
             <span asp-validation-for="Password" />
           </div>
           <div class="form">
             <label asp-for="ConfirmPassword" class="label_password">Повторите пароль</label><br />
             <input asp-for="ConfirmPassword" />
             <span asp-validation-for="ConfirmPassword" />
           </div>
           <div class="form_button">
             <input type="submit" value="Отправить" class="button_register" />
           </div>
    </form>
   </div>
</div>