@{
    ViewData["Title"] = "Login";
}
@model kopilka.ViewModels.LoginModel


<div class="style">
    <div class="div_welcome"><h1>Добро пожаловать!</h1></div>
    <div class="login_container">
        <a class="link_reg" asp-action="Register" asp-controller="Account">Регистрация</a>
        <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation_log" asp-validation-summary="All"></div>
            <div class="form_log">
                <label asp-for="Login" class="label_login">Введите Login</label>
                <input type="text" asp-for="Login" />
                <span asp-validation-for="Login" />
            </div>
            <div class="form_log">
                <label asp-for="Password" class="label_password">Введите пароль</label>
                <input asp-for="Password" class="input_password" />
                <span asp-validation-for="Password" />
            </div>
            <div class="form_button_log">
                <input type="submit" value="Войти" class="button" />
            </div>
        </form>
        <a class="link_forgotpass" asp-action="SendToEmailPassword" asp-controller="Account">Забыли пароль?</a>
    </div>
    <div class="login_info">
        <h1 class="login_h1">
            koPIPIka - это необычный способ копить деньги. Для накопления суммы вы выбираете любой числовой диапазон (к примеру от 1 до 100) и в пределах выбранного диапазона кладете деньги в копилку.Важное условие - сумма не должна повторятся!Остальное мы сделаем за вас: запомним внесенные суммы, поможем не повторяться, посчитаем финальную сумму.<br /><br />P.S. Возможно вы уже слышали об этом методе накоплений. Мы же упростили процесс для вас)
        </h1>
    </div>
</div>
